@model ToDo
@{
    ViewData["Title"] = "Delete";
}
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete To-Do</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label asp-for="Title"class="form-label mt-4"></label>
            <input asp-for="Title" disabled class="form-control"/>
            
        </div>
        <div class="mb-3">
            <label asp-for="DueDate"class="form-label mt-4"></label>
            <input type="date" asp-for="DueDate" disabled class="form-control" />
        </div>
       <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
       <a asp-controller="ToDoList" asp-action="Index" class="btn btn-secondary" style="width:150px">Back</a>

    </div>
</form>
