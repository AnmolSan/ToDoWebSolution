@model IEnumerable<ToDo>
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class = "text-primary">To-Do</h2>
        </div>
        
        <div class="col-6 text-end">
            <a asp-controller="ToDoList" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-file-earmark-plus"></i>&nbsp; Add
            </a>
        </div>
    </div>
    <table class ="table table-border " style="width:100%">
        <thead>
            <tr>
                <th ></th>
                <th>Title</th>
                <th>Due Date</th>
                <th></th>
                
            </tr>
        </thead>
        <tbody>
        @foreach(var obj in Model)
        {
               
                <tr class="table-light " id="TableRow">
                    <td hidden>
                        @obj.Id
                    </td>
                    <td class="form-check">
                        <input class = "form-check-input" onchange='handleChange(this);' type="checkbox" name="status" id="flexCheckDefault">
                        @*<a asp-controller="ToDoList"  asp-action="IsDone" asp-route-id="@obj.Id"  class="btn bi bi-toggle-on" style="cursor: pointer" ></a>*@
                        
                    </td>

                <td width="60%">
                    @obj.Title
                </td>
                <td width="15%">
                    @obj.DueDate.ToShortDateString()
                </td>
                <td width="25%">
                    <div class ="w-40 btn-group" role ="group">
                        <a asp-controller="ToDoList" asp-action="Edit" asp-route-id="@obj.Id" asp-route-UserId="@obj.UserId" class="btn btn-outline-secondary mx-2"><i class="bi bi-pencil-square"></i>&nbsp; Edit</a>
                    </div>
                    <div class ="w-40 btn-group" role ="group">
                        <a asp-controller="ToDoList" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-outline-warning mx-2"><i class="bi bi-trash"></i>&nbsp; Delete</a>
                    </div>
                </td>
                    </tr>
                
                
            }
    </tbody>
    </table>
    

</div>

