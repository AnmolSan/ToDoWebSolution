@model IEnumerable<ToDo>
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class = "text-primary">To-Do</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="ToDoList" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-file-earmark-plus"></i>&nbsp; Add
            </a>
        </div>
    </div>
    <table class ="table table-border table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Title</th>
                <th>Due Date</th>
                <th></th>
                
            </tr>
        </thead>
        <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="60%">
                    @obj.Title
                </td>
                <td width="15%">
                    @obj.DueDate.ToShortDateString()
                </td>
                <td width="25%">
                    <div class ="w-40 btn-group" role ="group">
                        <a asp-controller="ToDoList" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-outline-secondary mx-2"><i class="bi bi-pencil-square"></i>&nbsp; Edit</a>
                    </div>
                    <div class ="w-40 btn-group" role ="group">
                        <a asp-controller="ToDoList" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-outline-warning mx-2"><i class="bi bi-trash"></i>&nbsp; Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
    </table>
    

</div>


