@model IEnumerable<ToDoAudit>
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class = "text-primary">To-Do</h2>
        </div>
    </div>
    <table class ="table table-border table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Field</th>
                <th>Old Value</th>
                <th>New Value</th>
                <th>User Name</th>
                <th>Time</th>

                
                
            </tr>
        </thead>
        <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="5%">
                    @obj.Field
                </td>
                <td width="25%">
                    @obj.OldValue
                </td>
                <td width="25%">
                    @obj.NewValue
                </td>
                <td width="25%">
                    @obj.User
                </td>
                <td width="15%">
                    @obj.Date.ToShortDateString()
                </td>
               
            </tr>
        }
    </tbody>
    </table>
    

</div>
